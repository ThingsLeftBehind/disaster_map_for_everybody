{
  "name": "jp-nationwide-evacuation-finder",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.8.1",
  "scripts": {
    "dev": "npm --workspace apps/web run dev",
    "build": "npm --workspace apps/web run build",
    "postinstall": "npm run prisma:generate",
    "lint": "npm --workspace apps/web run lint",
    "test:jma": "node --test apps/web/lib/jma/__tests__/*.test.mjs",
    "test:store": "node --test apps/web/lib/store/__tests__/*.test.mjs",
    "import": "tsx scripts/import-all.ts",
    "data:refs": "node scripts/fetch-static-refs.js",
    "data:municipalities": "node scripts/generate-municipalities.js",
    "data:validate": "node scripts/validate-data.js",
    "data:pretty:municipalities": "node scripts/pretty-municipalities.js",
    "data:refresh": "npm run data:refs && npm run data:municipalities && npm run data:validate",
    "prisma:generate": "npm --workspace packages/db run prisma:generate"
  },
  "workspaces": [
    "apps/web",
    "packages/db",
    "packages/importer",
    "packages/shared"
  ],
  "devDependencies": {
    "tsx": "^4.16.2"
  }
}