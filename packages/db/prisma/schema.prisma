generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model evac_sites {
  id                      String         @id @default(uuid()) @db.Uuid
  common_id               String?        @unique
  pref_city               String?
  name                    String
  address                 String?
  lat                     Float
  lon                     Float
  hazards                 Json
  is_same_address_as_shelter Boolean?
  shelter_fields          Json?
  notes                   String?
  source_updated_at       DateTime?
  created_at              DateTime       @default(now())
  updated_at              DateTime       @updatedAt
  
  pref_code               String?        // JIS 2-digit
  muni_code               String?        // JIS 5-digit normalized
  
  crowd_reports           crowd_reports[]

  @@index([pref_code])
  @@index([pref_code, muni_code])
}

model crowd_reports {
  id          String   @id @default(cuid())
  site        evac_sites @relation(fields: [site_id], references: [id])
  site_id     String
  status      CrowdStatus
  comment     String?
  device_hash String
  created_at  DateTime @default(now())

  @@index([site_id, created_at])
  @@index([device_hash, created_at])
}

enum CrowdStatus {
  OK
  CROWDED
  VERY_CROWDED
  CLOSED
  BLOCKED
}

model device_settings {
  device_hash        String   @id
  transfer_code      String?
  saved_places       Json?
  hazard_alert_prefs Json?
  updated_at         DateTime @updatedAt
  created_at         DateTime @default(now())
  safety_status      safety_status?
}

model safety_status {
  id              String   @id @default(cuid())
  device_hash     String   @unique
  status          SafetyStatus
  updated_at      DateTime @default(now())
  last_known_lat  Float?
  last_known_lon  Float?
  device          device_settings @relation(fields: [device_hash], references: [device_hash])
}

enum SafetyStatus {
  SAFE
  EVACUATING
  EVACUATED
  INJURED
  ISOLATED
}

// Push notification tables (privacy-first: no raw GPS stored)

model push_devices {
  id          String   @id @default(cuid())
  push_token  String   @unique
  platform    String   // 'ios' | 'android' | 'expo'
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  subscriptions push_subscriptions[]
  dedup_states  push_dedup_states[]
}

model push_subscriptions {
  id         String       @id @default(cuid())
  device     push_devices @relation(fields: [device_id], references: [id], onDelete: Cascade)
  device_id  String
  cell_id    String       // JMA area code (e.g., "130000") - NO raw GPS
  created_at DateTime     @default(now())

  @@unique([device_id, cell_id])
  @@index([cell_id])
}

model push_dedup_states {
  id           String       @id @default(cuid())
  device       push_devices @relation(fields: [device_id], references: [id], onDelete: Cascade)
  device_id    String
  cell_id      String
  event_key    String       // e.g., "130000|大雨警報"
  severity     Int          // 1=注意報, 2=警報, 3=特別警報
  last_sent_at DateTime

  @@unique([device_id, cell_id, event_key])
  @@index([last_sent_at])
}

